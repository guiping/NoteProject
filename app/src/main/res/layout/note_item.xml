<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="标题标题标题标题标题标题"
                android:textStyle="bold" />

            <TextView
                android:textSize="10sp"
                android:text="发布日期"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888" />

        </LinearLayout>

        <TextView
            android:maxLines="10"
            android:ellipsize="end"
            android:textSize="15sp"
            android:fontFamily="@font/robotoslab_regular"
            tools:text="这是笔记嫩荣第三方发送到发送到发  说到发送到发送到是分身乏术地方说到发送发的深根固柢反攻倒算公司归属地根深蒂固的时光  是根深蒂固山东分公司的山东根深蒂固山东高峰时段个 山东分公司的风格"
            android:id="@+id/contentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
        <TextView
            android:textSize="10sp"
            android:text="发布日期"
            android:id="@+id/dateTextView"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:fontFamily="@font/robotoslab_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end">


            <TextView
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:id="@+id/editButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                android:background="@mipmap/icon_edit" />

            <TextView
                android:layout_marginLeft="20dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:id="@+id/deleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                android:background="@mipmap/icon_delete" />

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>