<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <data>-->
<!--        <variable-->
<!--            android:name="viewModel"-->
<!--            android:type="com.odfudndh.mvjsu.ui.publish.PublishNoteViewModel" />-->
<!--    </data>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="20dp"
               android:textColor="#475569"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:fontFamily="@font/robotoslab_regular"
               android:text="Add New Note" />
           <TextView
               android:id="@+id/btnPub"
               android:layout_alignParentEnd="true"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="10dp"
               android:textColor="@color/black"
               android:fontFamily="@font/robotoslab_regular"
               android:layout_height="wrap_content"
               android:text="Add"
               />
       </RelativeLayout>


        <EditText
            android:id="@+id/titleEditText"
            android:textSize="12dp"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:background="@drawable/shape_gray_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter a title"
        />
        <TextView
            android:textSize="20dp"
            android:textColor="#475569"
            android:layout_marginHorizontal="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes Content" />

        <EditText
            android:id="@+id/contentEditText"
            android:textSize="12dp"
            android:gravity="left"
            android:minHeight="300dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="14dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:fontFamily="@font/robotoslab_medium"
            android:layout_height="wrap_content"
            android:hint="Please enter the content"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>